<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#e0e5e5e5"/>
            <stroke android:width="1dp" android:color="#e0dce0"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#e5e5e5"/>
            <stroke android:width="1dp" android:color="#aaa"/>
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#e5e5e5"/>
            <stroke android:width="1dp" android:color="#aaa"/>
        </shape>
    </item>

</selector>