<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/otop_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="#333333"
            app:riv_border_width="0dp"
            app:riv_corner_radius="40dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            tools:ignore="UnusedAttribute"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/otop_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/bangna"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintStart_toEndOf="@+id/otop_image_view"
            app:layout_constraintTop_toTopOf="@+id/otop_image_view"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="ชื่อสถานที่" />

        <TextView
            android:id="@+id/village_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/bangna"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            tools:text="TextView" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="17dp"
            android:layout_height="21dp"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/otop_image_view"
            app:layout_constraintStart_toStartOf="@+id/otop_name_text_view"
            app:layout_constraintTop_toBottomOf="@+id/otop_name_text_view"
            app:srcCompat="@drawable/ic_marker"
            tools:ignore="ContentDescription" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
